#!/usr/bin/env bash

COW_FILE="/usr/local/share/catwizard/catwizard.cow"

# Check if the cow file exists
if [ ! -f "$COW_FILE" ]; then
    echo "Error: catwizard.cow not found at $COW_FILE."
    exit 1
fi

# Read the cow file
COW_ART=$(cat "$COW_FILE")

# If no arguments, just print ASCII art
if [ $# -eq 0 ]; then
    echo "$COW_ART"
else
    # Simple speech bubble
    echo " ____"
    echo "< $* >"
    echo " ----"
    echo "$COW_ART"
fi
