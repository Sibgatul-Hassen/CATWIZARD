#!/usr/bin/env bash

COW_FILE="/usr/local/share/catwizard/catwizard.cow"

if ! command -v cowsay >/dev/null 2>&1; then
  echo "Error: cowsay is not installed."
  exit 1
fi

if [ ! -f "$COW_FILE" ]; then
  echo "Error: catwizard.cow not found."
  exit 1
fi

if [ $# -eq 0 ]; then
  cowsay -f "$COW_FILE"
else
  cowsay -f "$COW_FILE" "$*"
fi
